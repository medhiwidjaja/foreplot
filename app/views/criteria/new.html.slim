- page_title "New Criterion"
= article_menu @presenter.article
- content_for :left_frame do
  = render partial: 'sidepanel', locals:{ p: @presenter }

#container-box
  = render 'shared/flash_messages'
  .widget
    .widget-header
      i.icon-sitemap
      h3 Create new criterion
    .well.well-widget-content
      .section
        .widget-content-title Parent node
        h3 = @presenter.parent.title unless @presenter.parent.nil?
      .section
        .section-title Criterion

        = form_with model: @criterion, url: create_sub_criterion_path(@presenter.parent) do |f|
          == render partial: 'fields', locals: { form: f, criterion: @criterion, parent_id: @presenter.parent_id, cost: false }
          br
          #toolbar.button-toolbar
            = f.submit 'Save', class:"btn btn-primary"
            ' &nbsp;
            = link_to criterion_path(@presenter.parent), class:'btn' do
              i.icon-remove
              |  Cancel