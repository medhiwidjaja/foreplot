- page_title "Articles"

= article_menu
- content_for :left_frame do
 	= render partial: 'shared/user_profile', locals: { user: current_user }

#content-box
  .widget
    .widget-header
      i.icon-file
      h3 Articles
      = link_to 'Create new article', new_article_path, class:'btn btn-mini btn-warning'
    .well.well-widget-content
      - if current_user.articles.any?
        table.table.table-bordered.articles
          = render @articles
        = page_navigation_links @articles
